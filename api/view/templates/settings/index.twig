{% extends 'layouts/main.twig' %}

{% block content %}
    <form action="{{ postTo }}" method="post">
        <fieldset>
            <label>
                gitlab url
                <input type="text" name="gitlab_url" value="{{ setting.getGitlabUrl() }}" />
            </label>
            <br />
            <label>
                client id
                <input type="text" name="client_id" value="{{ setting.getClientId() }}" />
            </label>
            <br />
            <label>
                secret
                <input type="text" name="secret" value="{{ setting.getSecret() }}" />
            </label>
            <br />
            <label>
                redirect url
                <input type="text" name="redirect_url" value="{{ setting.getRedirectUrl() }}" />
            </label>
            <br />
            <label>
                state
                <input type="text" name="state" value="{{ setting.getState() }}" />
            </label>
        </fieldset>
        <fieldset>
            <label>
                webhook url
                <input type="text" name="webhook_url" value="{{ webhook.getUrl() }}" />
            </label>
            <br />
            <label>
                webhook token
                <input type="text" name="webhook_token" value="{{ webhook.getToken() }}" />
            </label>
            <br />
            <label>
                webhook push events
                <input type="text" name="webhook_push_events" value="{{ webhook.getPushEvents() }}" />
            </label>
            <br />
            <label>
                webhook enable ssl verification
                <input type="text" name="webhook_enable_ssl_verification" value="{{ webhook.getEnableSslVerification() }}" />
            </label>
        </fieldset>
        <input type="submit" value="Save" />
    </form>

{% endblock %}